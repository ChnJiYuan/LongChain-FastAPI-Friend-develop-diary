# ==== Core ====
APP_ENV=dev
PROJECT_NAME=Membot
APP_VERSION=0.1.0
API_PREFIX=/api/v1
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==== LLM / Embeddings ====
OPENAI_API_KEY=changeme
LLM_MODEL=gpt-4.1
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIM=1536                 # Keep in sync with EMBEDDING_MODEL and Milvus schema
LLM_PROVIDER=openai                # openai | ollama | mock

# ==== Memori (structured memory) ====
MEMORI_PROJECT_ID=companion-assistant
MEMORI_API_KEY=                    # required for real Memori calls
MEMORI_ENDPOINT=https://api.memori.local
# MEMORI_STORAGE_URL=postgresql+psycopg://user:pass@host:5432/memori   # dev-only; avoid SQLite in prod

# ==== Milvus (vector memory) ====
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus
MILVUS_COLLECTION=chat_history
MILVUS_DATABASE=default
MILVUS_TLS=false

# ==== App persistence (FastAPI) ====
POSTGRES_USER=membot
POSTGRES_PASSWORD=membot_password
POSTGRES_DB=membot
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://membot:membot_password@postgres:5432/membot   # override with strong creds in prod

# ==== Ollama (local LLM) ====
OLLAMA_BASE_URL=http://localhost:11434

# ==== Frontend (Vite) ====
VITE_API_BASE_URL=http://localhost:8000
